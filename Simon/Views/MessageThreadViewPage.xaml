                                <richTextEditor:SfRichTextEditor.ToolbarSettings>
                                    <richTextEditor:ToolbarSettings TextColor="{StaticResource DarkBlueColor}" ToolbarBackgroundColor="White"></richTextEditor:ToolbarSettings>
                                </richTextEditor:SfRichTextEditor.ToolbarSettings>
                            </richTextEditor:SfRichTextEditor>-->