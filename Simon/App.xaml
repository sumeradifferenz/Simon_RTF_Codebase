            <Color x:Key="opacity10GrayColor">#1AADBAC3</Color>
            <Color x:Key="DarkGrayShadeColor">#AAABAC</Color>
            <Color x:Key="opacity30DarkGrayShadeColor">#4DAAABAC</Color>
